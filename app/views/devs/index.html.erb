<div class="container-fluid">

  <h1>HireMe! Dev List</h1>

  <%= form_for @dev, html: { class: 'form-horizontal', role: 'form'} do |f| %>
    <div class='form-group'>
      <label for="name" class="col-sm-1 control-label">Name</label>
      <div class="col-sm-3">
        <%= f.text_field :name, class: 'form-control', id: 'name', placeholder: 'Your Name' %>
      </div>
    </div>
    <div class='form-group'>
      <label for="url" class="col-sm-1 control-label">GitURL</label>
      <div class="col-sm-3">
        <%= f.text_field :url, class: 'form-control', id: 'url', placeholder: 'https://github.com/you' %>
      </div>
    </div>
    <div class='form-group'>
      <label for="description" class="col-sm-1 control-label">Bio</label>
      <div class="col-sm-3">
        <%= f.text_area :description, class: 'form-control', id: 'description' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-3">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  <% end %>

  <% @devs.each do |dev| %>
    <div class="row">
      <div class="col-sm-5">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><%= dev.name %> | <%= link_to "Git", dev.url %></h3>
          </div>
          <div class="panel-body">
            <%= dev.description %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
